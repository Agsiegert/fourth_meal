Restaurant Details


<dl class="dl-horizontal">
  <dt><strong>Title:</strong></dt>
  <dd><%= current_restaurant.title %></dd>

  <dt><strong>Description:</strong></dt>
  <dd><%= current_restaurant.description %></dd>

  <dt><strong>Status:</strong></dt>
  <dd><%= current_restaurant.status %></dd>
  <% current_restaurant.jobs.each do |job| %>
    <dt><strong>Role:</strong></dt>
    <dd><%= job.role %></dd>
    <dt><strong>User ID:</strong></dt>
    <dd><%= job.user_id %></dd>
    <dt><strong>Creator Email:</strong></dt>
    <dd><%= User.where(id: job.user_id).first.email %></dd>
  <% end %>

  <% if current_user.admin? %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              restaurant_path(current_restaurant),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'item-delete btn btn-danger btn-xs' %>
  <% end %>

</dl>
