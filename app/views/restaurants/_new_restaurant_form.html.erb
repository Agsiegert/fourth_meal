<%= form_for @restaurant, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>

  <div class="control-group">
    <%= f.label :Restaurant_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :title, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label :Restaurant_description, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

  <div class="control-group">
   <%= f.collection_radio_buttons :region_id, @regions, :id, :name, :class => 'control-label'%>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                root_path, :class => 'btn' %>
  </div>
<% end %>
