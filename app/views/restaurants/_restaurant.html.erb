<% cache restaurant do %>
  <div class="span4 well well-sm">
    <div class="item">
      <div class="item-image">
        <td>
          <div class="image-display">
           <%= image_tag("#{restaurant.id}_logo.png", class: "header-images center") %>
          </div>
        </td>
      </div>
      <div class="item-details">
        <h5>
          <%= restaurant.title %>
        </h5>
        <p class="item-description">
          <%= restaurant.description[0..26] %>
          <%="â€¦" if restaurant.description.length > 26 %>
        </p>
      </div>
      <div id="view-menu">
        <%= link_to 'View Menu', restaurant_name_path(restaurant.slug), class: "item-show btn btn-default", id: "btn-view-menu-#{restaurant.id}" %>
      </div>
    </div>
  </div>
<% end %>
