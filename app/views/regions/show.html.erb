<%- model_class = Restaurant -%>
<div class="text-center", style="padding-bottom: 50px;">
  <font size="15em"><%= @current_region.name%>'s finest restaurants </font>
</div>
<div class="center-text", style="margin-left: 4%">
  <div class="container">
    <%= render partial: 'restaurants/restaurant', collection: @restaurants %>
    <%= paginate @restaurants %>
  </div>
</div>
<div class="col-lg-12">
  <% if @current_user && @current_user.authenticated? %>
    <%= render 'layouts/footer' %>
  <% end %>
</div>

