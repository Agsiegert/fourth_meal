<%= form_for @user, html: {class: "update_guest_to_user"} do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="row">
    <div class="col-md-4">
      <p>
        <%= f.label :email, "Email (required)" %><br />
        <%= f.text_field :email %>
      </p>
      <p>
        <%= f.label :full_name, "Full Name (required)" %><br />
        <%= f.text_field :full_name %>
      </p>
      <p>
        <%= f.label :display_name %><br />
        <%= f.text_field :display_name %>
      </p>
      <p>
        <%= f.label :password, "Password (required)" %><br />
        <%= f.password_field :password %>
      </p>
      <p>
        <%= f.label :password_confirmation, "Password Confirmation (required)" %><br />
        <%= f.password_field :password_confirmation %>
      </p>
    </div>
    <div class="col-md-4">
    <strong>Billing Info:</strong>
      <p>
        <%= f.label :street %><br />
        <%= f.text_field :billing_street %>
      </p>
      <p>
        <%= f.label :apt %><br />
        <%= f.text_field :billing_apt %>
      </p>
      <p>
        <%= f.label :city %><br />
        <%= f.text_field :billing_city %>
      </p>
      <p>
        <%= f.label :state %><br />
        <%= f.text_field :billing_state %>
      </p>
      <p>
        <%= f.label :zip_code %><br />
        <%= f.text_field :billing_zip_code %>
      </p>
    </div>
    <div class="col-md-4">
    <strong>Shipping Info:</strong>
      <p>
        <%= f.label :street %><br />
        <%= f.text_field :shipping_street %>
      </p>
      <p>
        <%= f.label :apt %><br />
        <%= f.text_field :shipping_apt %>
      </p>
      <p>
        <%= f.label :city %><br />
        <%= f.text_field :shipping_city %>
      </p>
      <p>
        <%= f.label :state %><br />
        <%= f.text_field :shipping_state %>
      </p>
      <p>
        <%= f.label :zip_code %><br />
        <%= f.text_field :shipping_zip_code %>
      </p>
    </div>
  </div>
  <p class="button"><%= f.submit %></p>
<% end %>
