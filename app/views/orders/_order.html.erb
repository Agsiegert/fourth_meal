<tr>
  <td><%= order.status %></td>
  <td class="<%= order.status %>"><%= link_to 'Show', orders_path %></td>
  <% if allow? "orders", "edit" %>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
  <% end %>
  <% if allow? "orders", "destroy" %>
    <td><%= link_to 'Destroy', orders_path, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  <% end %>
</tr>
