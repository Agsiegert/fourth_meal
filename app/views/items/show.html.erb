<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<%= render partial: 'items/item_show', locals: {item: @item, model_class: model_class} %>

<div>
<div class="pull-left" data-no-turbolink>
  <% if current_user.admin? || current_user.current_restaurant_admin?(current_restaurant) %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              item_path(@item),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'item-delete btn btn-danger btn-xs' %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_item_path(@item), :class => 'item-edit btn btn-default btn-xs item-admin' %>
  <% end %>
</div>
