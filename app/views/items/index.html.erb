<%- model_class = Item -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:price) %></th>
      <th><%= model_class.human_attribute_name(:active) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @items.each do |item| %>
      <tr>
        <td><%= item.title %></td>
        <td><%= item.description %></td>
        <td><%= item.price %></td>
        <td><%= item.active %></td>
        <td><%= item.category_names %></td>
        <td>
          <%= link_to t('.show', :default => t("helpers.links.show")), item_path(item), :class => 'btn btn-mini' %>

          <% if allow? "items", "edit" %>
            <%= link_to t('.edit', :default => t("helpers.links.edit")), edit_item_path(item), :class => 'btn btn-mini' %>
          <% end %>

          <%= button_to 'Add to Cart', order_items_path(item_id: item.id), :class => 'btn btn-mini'  %>

          <% if allow? "items", "destroy" %>
            <%= link_to t('.destroy', :default => t("helpers.links.destroy")), item_path(item), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are  you sure?')) }, :class => 'btn btn-mini btn-danger' %>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if allow? "items", "create" %>
  <%= link_to t('.new', :default => t("helpers.links.new")), new_item_path, :class => 'btn btn-primary' %>
<% end %>
