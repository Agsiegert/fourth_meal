 <div class="span4 well well-sm">
  <div class="item">
    <div class="item-image">
      <td>
        <div class="image-display">
          <%= image_tag item.image.url(:square) %>
        </div>
      </td>
    </div>
    <div class="item-details">
      <h5>
        <%= item.title %>
      </h5>
      <p class="item-description">
        <%= item.description %>
      </p>
      <div class="item-price pull-left">
        <%= print_price item.price %>
      </div>
      <div class="item-status pull-right">
        <%= print_status item.active %>
      </div><br />
      <div class="pull-right" data-no-turbolink>
        <%= link_to 'Add to Cart', "#{current_restaurant.slug}/order/#{item.id}", { method: :post, class: 'btn btn-danger btn-xs' } %>
      </div>
      <%= link_to 'Show', restaurant_item_path(item.restaurant.slug, item), class: "item-show btn btn-default btn-xs" %>
      <% if allow? "items", "edit" %>
        <%= link_to 'Edit', edit_item_path(item), class: "item-edit btn btn-default btn-xs", class: "item-admin"%>
      <% end %>
      <% if allow? "items", "destroy" %>
        <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, class: "item-delete btn btn-warning" %>
      <% end %>
    </div>
  </div>
</div>

