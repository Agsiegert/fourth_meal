<%= form_for(@item) do |f| %>
  <% if @item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% @item.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :price %><br>
    <%= f.text_field :price %>
  </div>
  <div class="field">
    Categories:<br />
    <% Category.all.each do |category| %>
      <% if @item.categories.include?(category) %>
        <%=hidden_field_tag "item[item_categories][]", "0"%>
        <%= check_box_tag "item[item_categories][]", category.id, true %>-<%= category.name %>
      <% else %>
        <%= check_box_tag "item[item_categories][]", category.id %>-<%= category.name %>
      <% end %>
    <% end %>
  </div>
  <div class="field">
    Active: <%= f.select :active, ['true', 'false'] %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
